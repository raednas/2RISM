{% extends '/back/base.html.twig' %}

{% block title %}Pack{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 40px; overflow-x: auto;">
        <div class="row">
            <div class="col-md-3" style="padding-right: 20px;">
                {# Ajoutez votre barre lat√©rale ici #}
            </div>
            <div class="col-md-9">
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                    <div class="text-center mb-4">
                        <button class="btn btn-primary mr-2" id="allBtn">All</button>
                        <button class="btn btn-primary mr-2" id="hotelBtn">Hotel</button>
                        <button class="btn btn-primary mr-2" id="airbnbBtn">Airbnb</button>
                        <button class="btn btn-primary mr-2" id="maisonBtn">Maison d'haute</button>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                        <th scope="col" style="width: 8%;">Id</th>
                                        <th scope="col" style="width: 10%;">Type</th>
                                        <th scope="col" style="width: 12%;">Date Debut</th>
                                        <th scope="col" style="width: 12%;">Date Fin</th>
                                        <th scope="col" style="width: 10%;">Prix</th>
                                        <th scope="col" style="width: 12%;">Nom</th>
                                        <th scope="col" style="width: 12%;">Prenom</th>
                                        <th scope="col" style="width: 14%;">Adresse Mail</th>
                                        <th scope="col" style="width: 10%;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for facture in factures %}
                                        <tr>
                                            <td>{{ facture.id }}</td>
                                            <td>{{ facture.type }}</td>
                                            <td>{{ facture.DateDebut ? facture.DateDebut|date('Y-m-d') : '' }}</td>
                                            <td>{{ facture.DateFin ? facture.DateFin|date('Y-m-d') : '' }}</td>
                                            <td>{{ facture.prix }}</td>
                                            <td>{{ facture.nom }}</td>
                                            <td>{{ facture.prenom }}</td>
                                            <td>{{ facture.AdresseMail }}</td>
                                            <td>
                                                <a href="{{ path('app_facture_show', {'id': facture.id}) }}" class="btn btn-primary mr-2">Show</a>
                                                <a href="{{ path('app_facture_edit', {'id': facture.id}) }}" class="btn btn-success mr-2">Edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="9" class="text-center">No records found</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="text-center mt-4">
                            <a href="{{ path('app_facture_new') }}" class="btn btn-warning">Create New</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
