{% extends '/back/base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 40px; overflow-x: auto;">
        <div class="table-container">
            <table class="table" style="margin-left: auto; margin-right: auto; width: 65%;">
                <thead>
                    <tr>
                        <th style="width: 30%;">Id</th>
                        <th style="width: 60%;">Datedebut</th>
                        <th style="width: 30%;">Datefin</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.id }}</td>
                            <td>{{ reservation.datedebut|date('Y-m-d H:i:s') }}</td>
                            <td>{{ reservation.datefin|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
