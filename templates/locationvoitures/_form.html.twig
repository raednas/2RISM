{% extends '/back/base.html.twig' %}

{% block title %}New agence{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                        <div class="form-group">
                            {{ form_label(form.nom_agence) }}
                            {{ form_widget(form.nom_agence, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom_agence) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.adresse_agence) }}
                            {{ form_widget(form.adresse_agence, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.adresse_agence) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.nbrvoitures_dispo) }}
                            {{ form_widget(form.nbrvoitures_dispo, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nbrvoitures_dispo) }}
                        </div>

                        

                        {{ form_row(form._token) }}

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="{{ path('app_locationvoitures_index') }}" class="btn btn-secondary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
