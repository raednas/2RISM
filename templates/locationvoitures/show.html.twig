{% extends '/back/base.html.twig' %}

{% block title %}agence{% endblock %}

{% block body %}
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <!-- Contenu de la navbar -->
            <!-- Vous pouvez ajouter le contenu de votre navbar ici -->
        </nav>

        <div class="text-center mt-4">
            <h1>Les details de l agence</h1>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th scope="row">Id</th>
                                    <td>{{ locationvoiture.id_agence }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">nom_agence</th>
                                    <td>{{ locationvoiture.nomagence }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">adresse</th>
                                    <td>{{ locationvoiture.adresseagence }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">nombre voitures</th>
                                    <td>{{ locationvoiture.nbrvoituresdispo }}</td>
                                </tr>
                                
                            </tbody>
                        </table>

                        <div class="text-center mt-3">
                            <a href="{{ path('app_locationvoitures_index') }}" class="btn btn-secondary">Back to list</a>
                            <a href="{{ path('app_locationvoitures_edit', {'id_agence': locationvoiture.id_agence}) }}" class="btn btn-primary">Edit</a>
                        </div>

                        {{ include('locationvoitures/_delete_form.html.twig') }}
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}