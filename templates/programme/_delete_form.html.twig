{% if programme is not null %}
    <form method="post" action="{{ path('app_programme_delete', {'id': programme.id_prog}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ programme.id_prog) }}">
        <button class="btn">Delete</button>
    </form>
{% endif %}