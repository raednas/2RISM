<!DOCTYPE html>

<title>Programme</title>

{% block body %}
    <h1>Programme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programme.id_prog }}</td>
            </tr>
            <tr>
                <th>Discription_programme</th>
                <td>{{ programme.descriptionProgramme}}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ programme.image }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ programme.duree ? programme.duree|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ programme.categorie }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_programme_index') }}">back to list</a>

    <a href="{{ path('app_programme_edit', {'id': programme.id_prog}) }}">edit</a>

    {{ include('programme/_delete_form.html.twig') }}
{% endblock %}
