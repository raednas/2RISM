{% extends 'back/base.html.twig' %}

{% block title %}Create new Programme{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Ajouter des marges et des rembourrages */
        .form-group {
            margin-bottom: 20px;
        }
        .form-control {
            padding: 10px;
        }

        /* Styliser les boutons */
        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
        }

        /* Ajouter une icône à côté du champ de date */
        .date-icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
        }

        /* Ajouter des animations */
        .btn:hover {
            background-color: #007bff;
            color: #fff;
            transition: background-color 0.3s ease;
        }

        /* Réduire la taille de la liste déroulante */
        .form-select {
            height: 35px; /* Hauteur personnalisée */
            width: 100%; /* Largeur maximale */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0 text-center">Create New Programme</h5>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger text-center mb-4" role="alert">
                                <strong>{{ message }}</strong>
                            </div>
                        {% endfor %}
                        
                        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                            <div class="col-md-12">
                                {{ form_row(form.descriptionProgramme, {'attr': {'class': 'form-control', 'placeholder': 'Description du programme'}}) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.imageFile, {'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(form.duree, {'attr': {'class': 'form-control', 'placeholder': 'Durée'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.categorie, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
