{% extends '/back/base.html.twig' %}

{% block title %}Véhicule{% endblock %}

{% block body %}
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <!-- Contenu de la navbar -->
            <!-- Vous pouvez ajouter le contenu de votre navbar ici -->
        </nav>

        <div class="text-center mt-4">
            <h1 class="display-4">Les détails du véhicule</h1>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <img src="{{ asset('images/' ~ vehicule.image) }}" alt="image" class="img-fluid">
                            </div>
                            <div class="col-md-6">
                                <h2 class="card-title">{{ vehicule.modele }}</h2>
                                <p class="card-text"><strong>Immatriculation:</strong> {{ vehicule.immatriculation }}</p>
                                <p class="card-text"><strong>Nombre de places:</strong> {{ vehicule.nbrPlaces }}</p>
                                <p class="card-text"><strong>Couleur:</strong> {{ vehicule.couleur }}</p>
                                <p class="card-text"><strong>nom de l agence:</strong> {{ vehicule.locationvoitures.getnomagence() }}</p>
                                <p class="card-text"><strong>Prix de location:</strong> {{ vehicule.prixdelocation }}</p>

                                <div class="text-center mt-3">
                                    <a href="{{ path('app_vehicule_index') }}" class="btn btn-secondary">Retour à la liste</a>
                                    <a href="{{ path('app_vehicule_edit', {'id': vehicule.id_vehicule}) }}" class="btn btn-primary">Modifier</a>
                                </div>

                                {{ include('vehicule/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}