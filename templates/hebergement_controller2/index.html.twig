    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type_hebergement</th>
                <th>Emplacement</th>
                <th>Nbr_etoile</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hebergement in hebergements %}
