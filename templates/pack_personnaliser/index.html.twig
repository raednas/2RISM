{% extends '/back/base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <h1 class="text-center mb-4">List of Pack Personnalisers</h1>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Pack</th>
                                <th scope="col">Programme</th>
                                <th scope="col">Category</th> <!-- Add this line -->
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for pack_personnaliser in pack_personnalisers %}
                                <tr id="pack-personnaliser-{{ pack_personnaliser.idPackPersonnaliser }}">
                                    <td>{{ pack_personnaliser.idPackPersonnaliser }}</td>
                                    <td>{{ pack_personnaliser.pack }}</td>
                                    <td>{{ pack_personnaliser.programme.descriptionProgramme }}</td>
                                    <td>
                                        {% if pack_personnaliser.programme.categorie is not null %}
                                            {{ pack_personnaliser.programme.categorie.getNomcategorie() }}
                                        {% else %}
                                            No category
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_pack_personnaliser_show', {'idPackPersonnaliser': pack_personnaliser.idPackPersonnaliser}) }}" class="btn btn-primary btn-sm">Show</a>
                                        <a href="{{ path('app_pack_personnaliser_edit', {'idPackPersonnaliser': pack_personnaliser.idPackPersonnaliser}) }}" class="btn btn-success btn-sm">Edit</a>
                                        <form method="post" action="{{ path('app_pack_personnaliser_delete', {'idPackPersonnaliser': pack_personnaliser.idPackPersonnaliser}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pack_personnaliser.idPackPersonnaliser) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">No records found</td> <!-- Adjust colspan -->
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <a href="{{ path('app_pack_personnaliser_new') }}" class="btn btn-primary">Create New</a>
            </div>
        </div>
    </div>
{% endblock %}
