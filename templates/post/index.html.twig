{% extends '/back/baseBack.html.twig' %}
{% block body %}
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        <h1>POSTES</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive" style="position: relative; z-index: 1; background-color: rgba(0, 0, 0, 0);">
                        <table class="table table-striped table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Description</th>
                                    <th>Hashtag</th>
                                    <th>DateP</th>
                                    <th>ImageP</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for post in posts %}
                                <tr>
                                    <td>{{ post.idpost }}</td>
                                    <td>{{ post.description }}</td>
                                    <td>{{ post.hashtag }}</td>
                                    <td>{{ post.dateP ? post.dateP|date('Y-m-d H:i:s') : '' }}</td>
                                    <td><img src="{{ asset('uploads/images/' ~ post.image_p ) }}" alt="Image" width="200"></td>
                                    <td>
                                        <a href="{{ path('app_post_show', {'id': post.idpost}) }}" style="background-color: #E57105; color: #FFFFFF;" class="btn">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a href="{{ path('app_post_edit', {'id': post.idpost}) }}" style="background-color: #791995; color: #FFFFFF;" class="btn">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    </td>
                                    
                                    
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6">no records found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <a href="{{ path('app_post_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}