{% extends 'back.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_event</th>
                <th>Type_event</th>
                <th>Duree_event</th>
                <th>Date_event</th>
                <th>Nom_event</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.idEvent }}</td>
                <td>{{ evenement.typeEvent }}</td>
                <td>{{ evenement.dureeEvent }}</td>
                <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.nomEvent }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'id_event': evenement.idEvent}) }}"class="btn btn-primary" style="border-radius: 10px;">show</a>
                    <a href="{{ path('app_evenement_edit', {'id_event': evenement.idEvent}) }}"class="btn btn-warning" style="border-radius: 10px;">edit</a>
                    <a href="{{ path('app_evenement_edit', {'id_event': evenement.idEvent}) }} "class="btn btn-danger" style="border-radius: 10px;">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center">
        <a href="{{ path('app_evenement_new') }}" class="btn btn-success" style="border-radius: 10px;"><span class="bi bi-cart-plus"></span> Create new</a>
    </div>
{% endblock %}
